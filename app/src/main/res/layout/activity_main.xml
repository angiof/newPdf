<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#aaa69d"
    android:layout_height="match_parent"
    tools:context=".activities.views.MainActivity">

    <ImageButton
        android:id="@+id/btnPspKit"
        android:layout_width="132dp"
        android:layout_height="66dp"
        android:src="@drawable/ic_psdfkit"
        android:text="Button"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="346dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="94dp"
        android:layout_height="28dp"
        android:text="pspdfKit"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btnPspKit"
        app:layout_constraintStart_toStartOf="@+id/btnPspKit"
        tools:layout_editor_absoluteY="412dp" />

    <Button
        android:id="@+id/btnPdfView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PdfViewer"
        app:layout_constraintBottom_toBottomOf="@+id/btnPspKit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPspKit"
        app:layout_constraintTop_toTopOf="@+id/btnPspKit" />
</androidx.constraintlayout.widget.ConstraintLayout>